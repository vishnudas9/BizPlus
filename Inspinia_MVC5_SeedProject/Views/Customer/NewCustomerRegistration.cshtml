
@{
    ViewBag.Title = "New Customer Registration";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    
                    <h2 style="color:#e37a07">New Customer Registration <br /><small>Fill all required fields</small></h2>
                    
                </div>

                <hr style="padding:0%;margin:0%" />
                <div class="ibox-content">



                    <div class="row">


                        <div class="col-sm-4 b-r">
                            <h3 class="m-t-none m-b" style="color:#2f5db1">Basic Info</h3>

                            <form role="form">
                                <div class="form-group"><label>Customer Name <label class="biz-required"> *</label></label> <input type="text" placeholder="Customer Name" class="form-control biz-border"></div>
                                <div class="form-group"><label>Billing Address<label class="biz-required"> *</label></label> <input type="text" placeholder="Street" class="form-control biz-border"></div>
                                <hr />
                                <div class="form-group"><label>Customer ID</label> <input type="text" placeholder="Customer ID (Optional)" class="form-control biz-border"></div>
                                <div class="form-group"><label>Contact Number</label> <input type="text" placeholder="Contact Number" class="form-control biz-border"></div>

                                <div class="form-group">
                                    <label>City/Town</label>
                                    <select class="form-control m-b biz-border" name="account">
                                        <option>Choose State</option>
                                        <option>option 2</option>
                                        <option>option 3</option>
                                        <option>option 4</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>State</label>
                                    <select class="form-control m-b biz-border" name="account">
                                        <option>Choose State</option>
                                        <option>option 2</option>
                                        <option>option 3</option>
                                        <option>option 4</option>
                                    </select>
                                </div>
                                <div class="form-group"><label>PIN Code</label> <input type="text" placeholder="Pin Code" class="form-control biz-border"></div>
                                <div class="form-group"><label>Email</label> <input type="email" placeholder="Email id" class="form-control biz-border"></div>

                                @*<div>
                    <button class=" biz-btn-hover btn btn-sm btn-primary pull-right m-t-n-xs" type="submit"><strong>Log in</strong></button>
                    <label> <input type="checkbox" class="i-checks"> Remember me </label>
                </div>*@
                            </form>
                        </div>

                        <div class="col-sm-4 b-r">
                            <h3 class="m-t-none m-b" style="color:#2f5db1">Customer Settings</h3>

                            <form role="form">
                                <div class="form-group"><label>Opening Balance <label class="biz-required"> *</label></label> <input type="text" placeholder="Opening Balance" class="form-control biz-border"></div>
                                <div class="form-group"><label>As of <label class="biz-required"> * </label><small> (Effective Date)</small></label> <input type="text" placeholder="(Effective Date)" class="form-control biz-border"></div>
                                <hr />
                                <h3 class="m-t-none m-b" style="color:#2f5db1">Price Group & Credit Limits</h3>
                                <div class="form-group">
                                    <label>Price Group <label class="biz-required"> *</label></label>
                                    <select class="form-control biz-border" name="account">
                                        <option>Choose Price Class</option>
                                        <option>A Group</option>
                                        <option>B Group</option>
                                        <option>C Group</option>
                                    </select>
                                </div>


                                <div class="form-group"><label>Maximum Credit Allowed <label class="biz-required"> *</label></label> <input type="text" placeholder="Creditable Amount" class="form-control biz-border"></div>
                                <div class="form-group"><label>Due Period <label class="biz-required"> *</label></label> <input type="text" placeholder="Creditable Period (In Days)" class="form-control biz-border"></div>
                                <div class="form-group">
                                    <label>Preferred Payment Method <label class="biz-required"> *</label></label>
                                    <select class="form-control biz-border" name="account">
                                        <option>Choose One</option>
                                        <option>Cash</option>
                                        <option>Cheque</option>
                                        <option>Card</option>
                                        <option>Account Transfer</option>
                                    </select>
                                </div>


                            </form>
                        </div>

                        <div class="col-sm-4 b-r">
                            <h3 class="m-t-none m-b" style="color:#2f5db1">Tax Settings</h3>

                            <form role="form">
                                <div class="form-group">
                                    <label>Is GST Registered?  <label class="biz-required"> *</label></label>
                                    <select class="form-control biz-border" name="account">
                                        <option>No</option>
                                        <option>Yes</option>
                                    </select>
                                </div>
                                <div class="form-group"><label>GST IN Number <label class="biz-required"> * </label><small></small></label> <input type="text" placeholder="GST IN Number" class="form-control biz-border"></div>
                                @*<div class="form-group"><label>GST IN Number <label class="biz-required">  </label></label> <input type="text" placeholder="GST IN Number" class="form-control biz-border"></div>*@
                                <hr />
                                <h3 class="m-t-none m-b" style="color:#2f5db1">Miscellaneous Settings</h3>
                                <div class="form-group">
                                    <label>Is Sub Customer ? <label class="biz-required"> *</label></label>
                                    <select class="form-control biz-border" name="account">
                                        <option>No</option>
                                        <option>Yes</option>
                                    </select>
                                </div>


                                <div class="form-group"><label>Parent Customer <label class="biz-required"> *</label></label> <input type="text" placeholder="Parent Customer" class="form-control biz-border"></div>

                                <div class="form-group">
                                    <label>Billing <label class="biz-required"> *</label></label>
                                    <select class="form-control biz-border" name="account">
                                        <option>Bill with Parent</option>
                                        <option>Bill this customer</option>

                                    </select>
                                </div>




                            </form>
                        </div>

                        <div class="col-lg-12 col-lg-offset-10 col-sm-12 col-sm-offset-10">
                            <button class="btn btn-white" type="submit">Cancel</button>
                            <button class="btn btn-primary biz-btn-hover" type="submit">Save changes</button>

                        </div>

                    </div>


                    

                </div>

            </div>

            
        </div>
        
    </div>
    
    
</div>